{{outlet}}

<h4 class="admin-menu-items__title">Current Menu Items</h4>
<ul class="admin-menu-items">
  {{#each model as |menuItemsList|}}
  <li class="admin-menu-item__name">
   {{#link-to "admin.menu-items.edit" menuItemsList }}{{menuItemsList.name}}{{/link-to}}
  </li>
  {{/each}}
</ul>
<div class="admin-btn-space">
  {{#link-to 'admin.menu-items.new'}}
    <button class="admin-menu-items_new-btn">New Item</button>
  {{/link-to}}
</div>



<style media="screen">

  .admin-menu-items__title, .admin-menu-items {
    display: flex;
    width: 50%;
    margin: auto;
    justify-content: center;
    padding-left: 0;
    background: #f6f1ed;
  }

  .admin-menu-items__title {
    background: #963019;
    margin-top: 20px;
    border: 1px solid #111;
    padding: 10px 0;
    color: #f6f1ed;
  }

  .admin-menu-items{
    border: 1px solid #111;
    display: flex;
    flex-direction: column;
  }

  .admin-menu-item__name {
    display: flex;
    flex: 1;
    justify-content: center;
    font-size: 16px;
    background: rgba(150, 48, 25, 0.1);
    border-bottom: 1px solid #111;
    padding: 5px;
  }

  .admin-menu-items_new-btn, .admin-menu-items_new-btn a {
    float: right;
    font-size: 20px;
    margin-top: 20px;
    margin-bottom: 20px;
    background: rgb(22, 23, 79);
    border-style: none;
    border: 1px #111 solid;
    color: #f6f1ed;
  }

  .admin-btn-space {
    width: 50%;
    margin: auto;
    justify-content: center;
  }

</style>
